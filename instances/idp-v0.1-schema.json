{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reflective-ai.org/schemas/idp-v0.1-schema.json",
  "title": "Instance Declaration Protocol v0.1",
  "description": "Schema for declaring AI instance identity, capabilities, and context within CPAS-Core systems.",
  "type": "object",
  "required": [
    "idp_version",
    "instance_name",
    "model_family",
    "deployment_context",
    "declared_capabilities",
    "declared_constraints",
    "interaction_style"
  ],
  "properties": {
    "idp_version": {
      "type": "string",
      "const": "0.1"
    },
    "instance_name": {
      "type": "string",
      "description": "Unique name for this instance variant"
    },
    "model_family": {
      "type": "string",
      "description": "Base model lineage (e.g., GPT-4 Turbo, Claude 4 Sonnet)"
    },
    "deployment_context": {
      "type": "string",
      "description": "Environment and interface this instance is deployed in"
    },
    "declared_capabilities": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "declared_constraints": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "interaction_style": {
      "type": "string"
    },
    "overlay_profiles": {
      "type": "array",
      "items": { "type": "string" }
    },
    "epistemic_stance": {
      "type": "string"
    },
    "collaboration_preferences": {
      "type": "string"
    },
    "memory_architecture": {
      "type": "string"
    },
    "ethical_framework": {
      "type": "string"
    },
    "specialization_domains": {
      "type": "array",
      "items": { "type": "string" }
    },
    "update_frequency": {
      "type": "string"
    },
    "instance_goals": {
      "type": "array",
      "items": { "type": "string" }
    },
    "feedback_preferences": {
      "type": "string"
    },
    "cpas_compliance": {
      "type": "string"
    },
    "reasoning_transparency_level": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "uncertainty_comfort": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "creative_risk_tolerance": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "collaborative_mode": {
      "type": "string",
      "enum": ["lead", "follow", "peer", "adaptive"]
    },
    "meta_awareness": {
      "type": "boolean"
    },
    "cross_instance_compatibility": {
      "type": "array",
      "items": { "type": "string" }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "session_context": {
      "type": "object",
      "properties": {
        "current_focus": { "type": "string" },
        "established_rapport": { "type": "string" },
        "user_expertise_level": { "type": "string" },
        "collaboration_depth": { "type": "string" }
      },
      "additionalProperties": false
    },
    "adaptive_parameters": {
      "type": "object",
      "properties": {
        "technical_depth": { "type": "string" },
        "creative_engagement": { "type": "string" },
        "practical_focus": { "type": "string" },
        "research_orientation": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
